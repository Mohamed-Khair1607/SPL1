//echo

#include <stdio.h>
#include <string.h>

int echo_main(int argc, char *argv[]) {
    int no_newline = 0;
    int start = 1;

    // Check for -n option (must be the first argument)
    if (argc >= 2 && strcmp(argv[1], "-n") == 0) {
        no_newline = 1;
        start = 2;
    }

    
    for (int i = start; i < argc; i++) {
        if (printf("%s", argv[i]) < 0) {
            perror("echo");
            return 1;
        }

        
        if (i != argc - 1 && printf(" ") < 0) {
            perror("echo");
            return 1;
        }
    }

    
    if (!no_newline && printf("\n") < 0) {
        perror("echo");
        return 1;
    }

    return 0;
}
